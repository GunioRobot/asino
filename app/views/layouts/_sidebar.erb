
<!-- sidebar start -->

<div class="column left">
  <h3><%= link_to 'Konten', '/accounts' %></h3>
  <% @accounts.each do |account| %>
    <%= link_to account.title, account, :style => "#{'font-weight:bold;' if account == @account}" %><br/>
  <% end %>

  <h3>Neue Zahlung</h3>
    <%= link_to 'Neue Zahlung', new_account_item_path(@account) if @account %>

  <h3>Kategorien</h3>
  <%= link_to 'Alle Kategorien', categories_path %><br/>
  <%= link_to 'Neue Kategorie anlegen', new_category_path(:account_id => @account.id) if @account %>


  <h3>Regeln</h3>
  <% if @account %>
    <%= link_to 'Alle Regeln', account_rulesets_path(@account) %><br/>
    <%= link_to 'Neue Regel anlegen', new_ruleset_path %>
  <% else %>
    <%= link_to 'Alle Regeln', rulesets_path %><br/>
    <%= link_to 'Neue Regel anlegen', new_ruleset_path %>
  <% end %>

</div>

<!-- sidebar end -->
