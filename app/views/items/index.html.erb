<h1>Listing items</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Amount</th>
    <th>Payee</th>
    <th>Description</th>
    <th>Uid</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.account_id %></td>
    <td><%=h item.amount %></td>
    <td><%=h item.payee %></td>
    <td><%=h item.description %></td>
    <td><%=h item.uid %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>