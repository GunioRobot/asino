<div class="column left">
  <h3><%= link_to 'Konten', '/accounts' %></h3>
  <% @accounts.each do |account| %>
    <%= link_to account.title, account, :style => "#{'font-weight:bold;' if account == @account}" %><br/>
  <% end %>

  <h3>Neue Zahlung</h3>
    <%= link_to 'Neue Zahlung', new_account_item_path(@account) if @account %>

  <h3>Kategorien</h3>
  <%= link_to 'Alle Kategorien', categories_path %><br/>
  <%= link_to 'Neue Kategorie', new_category_path(:account_id => @account.id) if @account %>
</div>

<div class="column right">
<h1>Kategorien</h1>
<div class="m20">
<%= link_to 'Neue Kategorie anlegen', new_category_path %>
</div>
<table width="400">
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>

<% @categories.each do |category| %>
  <tr class="<%= cycle('odd', 'even') %> hover">
    <td colspan="2"><%=h category.name %></td>
    <td class="ar">
      <%= link_to image_tag('icons/edit.png'), edit_category_path(category) %>
      <%= link_to image_tag('icons/delete.png'), category, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
  <% category.categories.each do |subcategory| %>
  <tr class="<%= cycle('odd', 'even') %> hover">
	<td class="ar">-</td>
    <td><%=h subcategory.name %></td>
    <td class="ar">
      <%= link_to image_tag('icons/edit.png'), edit_category_path(subcategory) %>
      <%= link_to image_tag('icons/delete.png'), category_path(subcategory), :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
  <% end %>
<% end %>
</table>

</div>

<div class="clr"> </div>